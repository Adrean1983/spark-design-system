<sprk-input-container>
  <label sprkLabel>Password</label>
  <input
    [type]="passwordType"
    name="password_input"
    idString="password-entry-1"
    sprkInput>
  <sprk-selection-item-container>
    <input type="checkbox" sprkSelectionInput (click)="togglePasswordType()" idString="password-reveal-1">
    <label sprkSelectionLabel>Show Password</label>
  </sprk-selection-item-container>
</sprk-input-container>
