---
notes: This is the base notifications class.
hidden: true
---

<div class="c-Notification">
    <div class="c-Notification__icon c-Notification__icon--{{type}}">
        <svg class="o-icon o-icon--big" viewBox="0 0 100 100"><use xlink:href="{{@root.baseurl}}/assets/toolkit/images/icons.svg#{{icon}}" /></svg>
    </div>
    <div class="c-Notification__text">
        <span></span>
    </div>
    <button class="c-Notification__icon c-Notification__icon--close" type="button">
        <svg class="o-icon o-icon--big" viewBox="0 0 100 100"><use xlink:href="{{@root.baseurl}}/assets/toolkit/images/icons.svg#times" /></svg>
    </div>
</div>
