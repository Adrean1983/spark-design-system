<sprk-button (click)="toggleWaitModal($event)" additionalClasses="wait-button">Wait Modal</sprk-button>

<sprk-modal
  [(isVisible)]="waitVisible"
  title="Please wait..."
  (hide)="toggleWaitModal($event)"
  modalType="wait">
  This type of modal can't be closed by the
  user but will close shortly for demonstration purposes.
</sprk-modal>
