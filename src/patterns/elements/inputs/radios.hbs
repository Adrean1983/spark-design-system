<div class="sprk-b-InputContainer">
  <label id="notification-label">Notification Preference</label>

  <div class="sprk-b-SelectionContainer">
    <input id="email-pref" name="notification-pref" type="radio" checked="checked" aria-labelledby="notification-label">
    <label class="sprk-b-Label--inline sprk-u-mls" for="email-pref">Email</label>
  </div>

  <div class="sprk-b-SelectionContainer">
    <input id="text-pref" name="notification-pref" type="radio" aria-labelledby="notification-label">
    <label class="sprk-b-Label--inline sprk-u-mls" for="text-pref">Text</label>
  </div>

  <div class="sprk-b-SelectionContainer">
    <input id="email-and-text-pref" name="notification-pref" type="radio" aria-labelledby="notification-label">
    <label class="sprk-b-Label--inline sprk-u-mls" for="email-and-text-pref">Email &amp; Text</label>
  </div>
</div>
