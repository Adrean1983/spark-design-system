<div class="drizzle-state-changer" data-state-changer-id="{{id}}"
     role="radiogroup" aria-labelledby="state-select-{{id}}">
  <span class="drizzle-h5 drizzle-u-hiddenVisually" id="state-select-{{id}}">State Selection</span>
  <div class="drizzle-state-changer__state">
    <input class="drizzle-state-changer__state-item" id="drizzle-form-state-normal-{{id}}"
           name="drizzle-form-state-{{id}}" type="radio" value="normal" checked>
    <label class="drizzle-state-changer__state-item drizzle-h6"
           for="drizzle-form-state-normal-{{id}}">Normal</label>
  </div>
  <div class="drizzle-state-changer__state">
    <input class="drizzle-state-changer__state-item"
           id="drizzle-form-state-error-{{id}}" name="drizzle-form-state-{{id}}" type="radio"
           value="error">
    <label class="drizzle-state-changer__state-item drizzle-h6"
           for="drizzle-form-state-error-{{id}}">Error</label>
  </div>
  <div class="drizzle-state-changer__state">
    <input class="drizzle-state-changer__state-item" id="drizzle-form-state-disabled-{{id}}"
           name="drizzle-form-state-{{id}}" type="radio" value="disabled">
    <label class="drizzle-state-changer__state-item drizzle-h6"
           for="drizzle-form-state-disabled-{{id}}">Disabled</label>
  </div>
</div>