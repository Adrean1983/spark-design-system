<h1> Icons </h1>
{{> drizzle.spark-core-icons}}


{{#each (data "icons")}}
<div class="drizzle-Space-inset-m">
    <svg class="sprk-c-Icon sprk-c-Icon--small" viewBox="{{this.viewBox}}">
      <use xlink:href="#{{this.name}}" />
    </svg>

    <svg class="sprk-c-Icon" viewBox="{{this.viewBox}}">
      <use xlink:href="#{{this.name}}" />
    </svg>

    <svg class="sprk-c-Icon sprk-c-Icon--large" viewBox="{{this.viewBox}}">
      <use xlink:href="#{{this.name}}" />
    </svg>
</div>
{{else}}
  Theres nothing
{{/each}}
